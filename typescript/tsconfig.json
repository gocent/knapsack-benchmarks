{
  "compilerOptions": {
    "target": "es2016",
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
    "module": "commonjs",
     "rootDir": "./src",
     "moduleResolution": "NodeNext",
     "baseUrl": "./src",
     "types": ["node"],
     "allowJs": false,
     "checkJs": false,
     "maxNodeModuleJsDepth": 1,
     "declaration": true,
     "declarationMap": true,
     "sourceMap": true,
     "outDir": "./dist",
     "removeComments": true,
     "importHelpers": true,
     "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
     "noImplicitThis": true,
     "alwaysStrict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ]
}
